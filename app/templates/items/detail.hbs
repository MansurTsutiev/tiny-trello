{{#modal-dialog translucentOverlay=true}}
  <div class="row">
    <div class="col-7">
      <h4 class="">{{model.title}}</h4>
    </div>
    <div class="col">
      {{#link-to "items" class="btn btn_close"}}Close{{/link-to}}
      <button class="btn btn_close" onclick={{action "deleteItem"}}>Delete</button>
    </div>
  </div>
  {{edit-item-form description=(readonly model.description) onsubmit=(action "updateItem")}}
{{/modal-dialog}}
